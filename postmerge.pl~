#!/usr/bin/perl

use strict;

my $merger = $ARGV[0]; # Merger human-mouse

open (FILE, '<', $merger) or die "Cannot open input file"; # Opens the 1000GP file (stored in $gpfile)
open(STDOUT, '>', './output.vcf') or die "Cannot create output file"; # Redirects output to a FASTA file in the same folder

while (<GPFILE>) {
	my $line = $_;
	if ($line =~ m|^#|){ # Looks for a match that starts with '#' (headers)
		print $line;
	}
	if ($line =~ m|(.+?)AN=(\d+)\t(\./\.)+?(./.$)|){
		print $1 . "0/0" x 2;
	}


#(1/1$)	

#22	31768047	.	A	.	.	.	AN=0	GT

#print "22\t31768047\t.\tA\t.\t.\t.\tAN=0\tGT\t" . "0/0\t" x 1000
